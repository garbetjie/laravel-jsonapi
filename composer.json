{
    "name": "garbetjie/laravel-jsonapi-resources",
    "description": "Easily generate JSON:API response structures using Laravel's Resources.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Geoff Garbers",
            "email": "geoff@garbers.co.za"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "laravel/framework": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Garbetjie\\Laravel\\JsonApi\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Garbetjie\\Laravel\\JsonApi\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "justinrainbow/json-schema": "^5.2"
    },
    "scripts": {
        "tests": "phpunit -c phpunit.xml"
    }
}
